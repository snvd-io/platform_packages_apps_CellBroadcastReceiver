<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Dialog title for presidential level alert. [CHAR LIMIT=50] -->
    <!-- Required Korean (ko) translation for this message: 위급 재난문자 -->
    <string name="cmas_presidential_level_alert">Extreme Emergency Alert</string>
    <!-- Dialog title or menu title of emergency alert. [CHAR LIMIT=50] -->
    <!-- Required Korean (ko) translation for this message: 긴급 재난문자 -->
    <!-- Dialog title or menu title of emergency alert. [CHAR LIMIT=50] -->
    <string name="emergency_alert">Emergency Alert</string>
    <!-- Dialog title for all public safety message broadcasts. [CHAR LIMIT=50] -->
    <!-- Required Korean (ko) translation for this message: 안전 안내문자 -->
    <string name="public_safety_message">Public Safety Alert</string>
    <!-- CMAS dialog title for child abduction emergency (Amber Alert). [CHAR LIMIT=50] -->
    <!-- Required Korean (ko) translation for this message: 실종 경보문자 -->
    <string name="cmas_amber_alert">Amber Alert</string>

    <!-- Preference title for enable CMAS extreme threat alerts checkbox. [CHAR LIMIT=50] -->
    <!-- Required Korean (ko) translation for this message: 긴급 재난문자 -->
    <string name="enable_emergency_alerts_message_title">Emergency Alert</string>
    <!-- Preference title for enable public safety messages checkbox. [CHAR LIMIT=100] -->
    <!-- Required Korean (ko) translation for this message: 안전 안내문자 -->
    <string name="enable_public_safety_messages_title">Public Safety Alert</string>
    <!-- Preference title for enable CMAS amber alerts checkbox. [CHAR LIMIT=50] -->
    <!-- Required Korean (ko) translation for this message: 실종 경보문자 -->
    <string name="enable_cmas_amber_alerts_title">Amber Alert</string>

    <!-- Value of sms sender display name to be shown in SMS inbox for amber alerts -->
    <string name="sms_cb_sender_name_amber">@string/sms_cb_sender_name_public_safety</string>

    <!-- Preference summary the "about cell broadcast messages" info required for some carriers.
      Required Korean (ko) translation for this message:
      "재난 발생 시 휴대전화에서 대피 안내와 같은 경고 알림을 받아볼 수 있습니다. 이 서비스는 정부, 네트워크 공급자, 기기 제조업체와의 공조로 제공됩니다.\n\n기기에 문제가 있거나 네트워크 상태가 좋지 않을 경우 알림을 받지 못할 수 있습니다." -->
    <string name="alerts_header_summary">Your phone can send you alerts, like evacuation instructions, during disasters. This service is a collaboration between the Korean government, network providers, and device manufacturers.\n\nYou may not get alerts if there’s a problem with your device or if network conditions are poor.</string>

</resources>
